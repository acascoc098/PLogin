extends layout 

block content 
    .container
        form(action="/alumnos/create", method="post")
            label.form-label(for="nombre") Nombre:
            input.form-control(type="text", name="nombre", required)
            br
            label.form-label(for="apellido") Apellido:
            input.form-control(type="text", name="apellido", required)
            br
            label.form-label(for="telefono") Tel√©fono:
            input.form-control(type="tel", name="telefono", required)
            br
            label.form-label(for="email") Email:
            input.form-control(type="email", name="email", required)
            br
            button.btn.btn-success(type="submit") Guardar
            a.btn.btn-danger(href="/alumnos") Cancelar